{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "declaration": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "outDir": "dist/",
        "rootDir": "src/",
        "lib": ["es6", "es2016","dom"],
        "strict": true
    },
    "files": [
        "src/common.ts"
    ],
    "exclude": [
        "node_modules",
		"dist"
    ]
}